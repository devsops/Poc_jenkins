<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/site_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/site_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:minHeight="100dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:id="@+id/sitename_count_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:weightSum="100">

                <TextView
                    android:id="@+id/sitename"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="70"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/locationcount"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="@android:color/white">


                <ImageButton
                    android:id="@+id/gotositelocations"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/site_expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/site_name_layout"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/merge_signal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="@string/merge"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/edit_rssi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.5"
                android:visibility="gone"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="@string/editrssi"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/siteconfiguration"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="@string/site_config"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/store_config"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="@string/store_configuration"
                android:textColor="@android:color/white"
                android:visibility="gone" />


            <Button
                android:id="@+id/deletesite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/uploadsite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="@string/upload"
                android:textColor="@android:color/white"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>
