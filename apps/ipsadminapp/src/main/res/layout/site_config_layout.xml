<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="40dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/site_config_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center"
        android:text="@string/add_site_config"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/minimum_site_predict_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/site_config_title"
        android:layout_margin="15dp"
        android:focusable="true"
        android:hint="@string/minimum_site_predict_count"
        android:inputType="numberSigned"
        android:maxLength="2"
        android:maxLines="1"
        android:padding="20dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary" />

    <EditText
        android:id="@+id/minimim_location_probability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minimum_site_predict_count"
        android:layout_margin="15dp"
        android:focusable="true"
        android:hint="@string/minimim_location_probability"
        android:inputType="numberDecimal"
        android:maxLength="4"
        android:padding="20dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minimim_location_probability"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/loginbackground"
            android:focusable="true"
            android:paddingBottom="15dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingTop="15dp"
            android:text="@string/submit"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>