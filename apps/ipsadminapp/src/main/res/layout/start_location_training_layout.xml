<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:padding="10dp"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/trainthesection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/train_the_section"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@android:dimen/thumbnail_width"
        android:layout_height="@android:dimen/thumbnail_width"
        android:layout_below="@+id/trainthesection"
        android:layout_margin="10dp"
        android:padding="20sp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/trainguide" />

    <TextView
        android:id="@+id/guideText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/start_loca_training"
        android:layout_below="@+id/imageView"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="@string/guide_trainsection_one"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/start_loca_training"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/start"
        android:textColor="@android:color/white" />

</RelativeLayout>