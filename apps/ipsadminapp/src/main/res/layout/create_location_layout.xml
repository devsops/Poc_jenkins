<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="40dp"
    android:background="@android:color/white">

    <TextView
        android:layout_margin="20dp"
        android:id="@+id/train_location_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/train_location1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/locationname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/train_location_id"
        android:focusable="true"
        android:hint="@string/enter_location_name"
        android:maxLines="1"
        android:padding="20dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@android:color/darker_gray" />


    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locationname"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/trainlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/loginbackground"
            android:focusable="true"
            android:paddingBottom="15dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingTop="15dp"
            android:textSize="12sp"
            android:text="@string/train_location"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>